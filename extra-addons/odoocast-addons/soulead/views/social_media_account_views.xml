<odoo>
    <record id="view_social_media_account_tree" model="ir.ui.view">
        <field name="name">social.media.account.tree</field>
        <field name="model">social.media.account</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="platform"/>
            </tree>
        </field>
    </record>

    <record id="view_social_media_account_form" model="ir.ui.view">
        <field name="name">social.media.account.form</field>
        <field name="model">social.media.account</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="partner_id"/>
                        <field name="platform"/>
                        <field name="access_token"/>
                    </group>
                    <group>
                        <field name="post_ids"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_social_media_account" model="ir.actions.act_window">
        <field name="name">Social Media Accounts</field>
        <field name="res_model">social.media.account</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_social_media_scheduler" name="Social Media Scheduler" sequence="10"/>

    <menuitem id="menu_social_media_accounts" name="Social Media Accounts" parent="menu_social_media_scheduler" action="action_social_media_account"/>
</odoo>
