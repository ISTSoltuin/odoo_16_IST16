<odoo>
    <record id="view_social_media_dashboard_kanban" model="ir.ui.view">
        <field name="name">social.media.dashboard.kanban</field>
        <field name="model">social.media.account</field>
        <field name="arch" type="xml">
            <kanban>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card">
                            <field name="name"/>
                            <field name="partner_id"/>
                            <field name="platform"/>
                        </div>
                    </t>
                </templates>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="platform"/>
            </kanban>
        </field>
    </record>

    <record id="action_social_media_dashboard" model="ir.actions.act_window">
        <field name="name">Social Media Dashboard</field>
        <field name="res_model">social.media.account</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>

    <menuitem id="menu_social_media_dashboard" name="Dashboard" parent="menu_social_media_scheduler" action="action_social_media_dashboard"/>
</odoo>
