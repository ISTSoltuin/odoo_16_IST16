<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <div t-name="asterisk_plus_phone.menu" owl="1">
        <a href="#" t-attf-class="toggle-phone {{state.inCall ? 'busy' : 'available'}}" title="Toggle Phone" t-on-click="_onClick">
            <i aria-label="Toggle Phone" class="icon-call fa-fw" role="img"/>
        </a>

        <a t-if="!state.isDisplay and state.inCall" aria-label="HangUp" class="hang-up-popup" title="HangUp" t-on-click="_onClickHangUp">
            <i class="icon-call_end reject-call"/>
        </a>
    </div>

</templates>