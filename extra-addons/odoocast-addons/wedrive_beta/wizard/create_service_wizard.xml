<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="create_service_wizard_form" model="ir.ui.view">
        <field name="name">Create Service Wizard</field>
        <field name="model">create.service.wizard</field>
        <field name="arch" type="xml">
            <form string="Create Service">
                <group colspan="4">
                    <label for="service_name" colspan="4"/>
                    <field name="service_name" nolabel="1"/>
                    <label for="service_description" colspan="4"/>
                    <field name="service_description" nolabel="1"/>
                </group>
                <group>
                    <label for="service_price" colspan="4"/>
                    <field name="service_price" nolabel="1"/>
                </group>
                <group string="Lista de Produtos">
                    <field name="product_ids" widget="many2many_tags" />
                </group>
                <footer>
                    <button name="create_service" string="Create Service" type="object" class="btn-primary" />
                    <button string="Cancelar" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="create_service_wizard_action" model="ir.actions.act_window">
        <field name="name">Create Service</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">create.service.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- <menuitem id="create_service_wizard_menu"
