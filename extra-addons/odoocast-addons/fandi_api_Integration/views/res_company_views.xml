<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- View res.company form -->
    <record id="view_res_company_form_inherit" model="ir.ui.view">
        <field name="name">view.res.company.form</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='general_info']" position="after">
                <page name="api_page" string="API's">
                    <label for="api_environment"/>
                    <field name="api_environment" nolabel="1"/>
                    <group name="endpoints" string="Endpoints">
                        <field name="sandbox_webhook_url" attrs="{'invisible': [('api_environment', '!=', 'sandbox')]}"/>
                        <field name="homologation_webhook_url" attrs="{'invisible': [('api_environment', '!=', 'homologation')]}"/>
                        <field name="production_webhook_url" attrs="{'invisible': [('api_environment', '!=', 'production')]}"/>
                    </group>
                    <group name="tokens" string="Chaves de Acesso">
                        <field name="sandbox_token" attrs="{'invisible': [('api_environment', '!=', 'sandbox')]}"/>
                        <field name="homologation_token" attrs="{'invisible': [('api_environment', '!=', 'homologation')]}"/>
                        <field name="production_token" attrs="{'invisible': [('api_environment', '!=', 'production')]}"/>
                    </group>
                    <group name="other_params" string="Outros ParÃ¢metros">
                        <field name="entry_value_percent" />
                        <field name="installment_qty" />
                        <field name="cnpj_loja" />
                        <field name="cpf_vendedor" />
                        <field name="url_logomarca" />
                        <field name="cor_fundo" />
                        <field name="cor_destaque" />
                        <field name="cor_fonte_botao" />
                        <field name="url_callback" />
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>