<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View project.task.template View Tree -->
    <record id="view_project_task_template_tree" model="ir.ui.view">
        <field name="name">view.project.task.template.tree</field>
        <field name="model">project.task.template</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="priority" />
                <field name="date_end_interval" />
                <field name="deadline_interval" />
                <field name="state" />
                <field name="related_project_ids" widget="many2many_tags"/>
            </tree>
        </field>
    </record>

    <!-- View project.task.template form -->
    <record id="view_project_task_template_form" model="ir.ui.view">
        <field name="name">view.project.task.template.form</field>
        <field name="model">project.task.template</field>
        <field name="arch" type="xml">
            <form string="Project Task Template">
                <sheet>
                    <header>
                        <field name="active" invisible="1"/>
                        <button string="Activate" 
                            name="action_confirm" 
                            type="object" 
                            class="oe_highlight"
                            attrs="{'invisible':[('state','=','confirm')]}"/>
                        <button string="Cancel" 
                            name="action_cancel" 
                            type="object" 
                            class="oe_highlight"
                            attrs="{'invisible':[('state','=','cancel')]}"/>
                        <button string="Reset to Draft" 
                            name="action_draft" 
                            type="object" 
                            class="oe_highlight"
                            attrs="{'invisible':[('state','=','draft')]}"/>
                        <field name="state" widget="statusbar" readonly="1"/>
                    </header>
                    <div class="oe_title">
                        <label for="name" colspan="4"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <separator/>
                    <group>
                        <field name="priority" />
                        <field name="allow_subtask" />
                        <field name="allow_milestone" />
                        <field name="allow_task_dependencies" />
                        <field name="allow_recurring_task" />
                    </group>
                    <group>
                        <field name="date_end_interval" />
                        <field name="deadline_interval" />
                        <field name="default_planned_hours" />
                        <field name="company_id" />
                    </group>
                    <notebook>
                        <page name="project_ids" string="Projects">
                            <field name="related_project_ids" readonly="1"/>
                        </page>
                        <page name="description" string="Description">
                            <field name="description" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- View project.task.template search -->
    <record id="view_project_task_template_search" model="ir.ui.view">
        <field name="name">view.project.task.template.search</field>
        <field name="model">project.task.template</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
                    <filter string="Priority" name="priority" domain="[]" context="{'group_by':'priority'}"/>
                    <filter string="State" name="state" domain="[]" context="{'group_by':'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action project.task.template -->
    <record id="action_project_task_template" model="ir.actions.act_window">
        <field name="name">Project Task Template</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">project.task.template</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Use this feature to prepare Project Tasks to be automatically generated
            </p>
        </field>
    </record>

    <menuitem
        id="menu_project_task_template"
        name="Template Tasks"
        action="action_project_task_template"
        parent="project.menu_project_config"
        sequence="99"/>

</odoo>
