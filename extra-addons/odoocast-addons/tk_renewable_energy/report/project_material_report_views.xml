<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <template id="project_material_report_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="ren">
                    <t t-call="web.external_layout">
                        <t t-set="address">
                            <address t-field="ren.customer_id"
                                     t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}'/>
                        </t>
                        <br/>
                        <div class="page">
                            <h2>
                                <span t-field="ren.order_number"/>
                            </h2>
                            <br/>
                            <div id="information" class="row mt32 mb32">
                                <div class="col-auto col-3 mw-100 mb-2" t-if="ren.date_of_order" name="date_of_order">
                                    <strong>Date of Order:</strong>
                                    <p class="m-0" t-field="ren.date_of_order"/>
                                </div>
                                <div class="col-auto col-3 mw-100 mb-2" t-if="ren.responsible" name="responsible">
                                    <strong>Responsible:</strong>
                                    <p class="m-0" t-field="ren.responsible"/>
                                </div>
                                <div class="col-auto col-3 mw-100 mb-2" t-if="ren.bill_of_material_order_id"
                                     name="bill_of_material_order_id">
                                    <strong>Bill of Material:</strong>
                                    <p class="m-0" t-field="ren.bill_of_material_order_id"/>
                                </div>
                            </div>
                            <br/>

                            <table class="table table-sm o_main_table" name="bom_line_table">
                                <thead>
                                    <tr>
                                        <td colspan="100%" style="text-align:center;font-size:18px;">
                                            <strong>Bill of Materials</strong>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>
                                            <span>Product</span>
                                        </th>
                                        <th>
                                            <span>Quantity</span>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody class="bom_tbody">
                                    <tr t-foreach="ren.ren_bom_ids" t-as="bom">
                                        <td>
                                            <span t-field="bom.product_id"/>
                                        </td>
                                        <td>
                                            <span t-field="bom.product_qty"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
    <record id="action_project_material_report" model="ir.actions.report">
        <field name="name">Project Material Report</field>
        <field name="model">renewable.energy.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">tk_renewable_energy.project_material_report_template</field>
        <field name="report_file">tk_renewable_energy.project_material_report_template</field>
        <field name="binding_model_id" ref="model_renewable_energy_order"/>
        <field name="binding_type">report</field>
    </record>
</odoo>
