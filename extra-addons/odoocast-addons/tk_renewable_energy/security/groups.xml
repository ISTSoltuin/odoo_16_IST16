<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="module_category_tk_renewable_energy" model="ir.module.category">
            <field name="name">Renewable Energy</field>
            <field name="description">Access rights for Renewable Energy Management</field>
        </record>
        <record id="ren_user" model="res.groups">
            <field name="name">Users</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="category_id" ref="module_category_tk_renewable_energy"/>
        </record>
        <record id="ren_employee" model="res.groups">
            <field name="name">Employee</field>
            <field name="implied_ids" eval="[(4, ref('ren_user'))]"/>
            <field name="category_id" ref="module_category_tk_renewable_energy"/>
        </record>
        <record id="ren_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="implied_ids" eval="[(4, ref('ren_employee'))]"/>
            <field name="category_id" ref="module_category_tk_renewable_energy"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>
        <record id="base.default_user" model="res.users">
            <field name="groups_id" eval="[(4,ref('ren_manager'))]"/>
        </record>
    </data>
</odoo>