<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="ren_product_form_view" model="ir.ui.view">
        <field name="name">ren.product.form.view</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//label[@for='purchase_ok']" position="after">
                <span class="d-inline-block">
                    <field name="is_solar_product"/>
                    <label for="is_solar_product"/>
                </span>
            </xpath>
            <xpath expr="//notebook/page[5]" position="before">
                <page name="solar_specification" string="Solar Specifications">
                    <group>
                        <group>
                            <field name="max_power_voltage"/>
                            <field name="max_power_current"/>
                        </group>
                        <group>
                            <field name="inverter_capacity"/>
                            <field name="battery_capacity"/>
                            <field name="module_capacity"/>
                        </group>
                    </group>
                    <group string="Temperature Coefficient Of">
                        <group>
                            <field name="temp_coefficient_pmex"/>
                            <field name="temp_coefficient_voc"/>
                        </group>
                        <group>
                            <field name="temp_coefficient_isc"/>
                            <field name="operating_temp"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
    <record id="action_ren_product" model="ir.actions.act_window">
        <field name="name">Product</field>
        <field name="res_model">product.product</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>
</odoo>

