<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="renewable_energy_order_form_view" model="ir.ui.view">
        <field name="name">renewable.energy.order.form.view</field>
        <field name="model">renewable.energy.order</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="order_stages" widget="statusbar"
                           statusbar_visible="new,site_inspection,material_order,material_arrived,project_installation,qa_check,complete"/>
                    <button string="Site Inspection" name="new_to_site_inspection" type="object"
                            attrs="{'invisible': [('order_stages', 'not in', ['new'])]}"/>
                    <button string="Material Order" name="site_inspection_to_material_order" type="object"
                            attrs="{'invisible': [('order_stages', 'not in', ['site_inspection'])]}"/>
                    <button string="Material Arrived" name="material_order_to_material_arrived" type="object"
                            attrs="{'invisible': [('order_stages', 'not in', ['material_order'])]}"/>
                    <button string="Project Installation" name="material_arrived_to_project_installation" type="object"
                            attrs="{'invisible': [('order_stages', 'not in', ['material_arrived'])]}"/>
                    <button string="QA Check" name="project_installation_to_qa_check" type="object"
                            attrs="{'invisible': [('order_stages', 'not in', ['project_installation'])]}"/>
                    <button string="Complete" name="qa_check_to_complete" type="object" class="oe_highlight"
                            attrs="{'invisible': [('order_stages', 'not in', ['qa_check'])]}"/>
                    <button string="Cancel" name="complete_to_cancel" type="object" class="oe_highlight"
                            attrs="{'invisible': [('order_stages', 'not in', ['qa_check'])]}"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box" position="inside">
                        <button class="oe_start_button" type="object" name="action_survey_task"
                                icon="fa-tasks">
                            <field string="Survey Tasks" name="survey_task_count" widget="statinfo"/>
                        </button>
                        <button class="oe_start_button" type="object" name="action_installation_task"
                                icon="fa-tasks">
                            <field string="Installation Tasks" name="installation_task_count" widget="statinfo"/>
                        </button>
                        <button class="oe_stat_button" type="object" name="action_qa_task"
                                icon="fa-tasks">
                            <field string="QA Tasks" name="qa_task_count" widget="statinfo"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="order_number"/>
                        <h1>
                            <field name="order_number"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="customer_id"/>
                            <field name="phone"/>
                            <field name="email"/>
                        </group>
                        <group>
                            <field name="date_of_order"/>
                        </group>
                    </group>
                    <group>
                        <group string="Residence Details">
                            <span class="o_form_label o_td_label" name="address_name">
                                <strong>Address</strong>
                            </span>
                            <div class="o_address_format">
                                <field name="customer_street" placeholder="Street..." class="o_address_street"/>
                                <field name="customer_street2" placeholder="Street 2..." class="o_address_street"/>
                                <field name="customer_city" placeholder="City" class="o_address_city"/>
                                <field name="customer_state_id" class="o_address_state" placeholder="State"
                                       options="{'no_create':True,'no_create_edit':True,'no_open':True}"/>
                                <field name="customer_zip" placeholder="ZIP" class="o_address_zip"/>
                                <field name="customer_country_id" placeholder="Country" class="o_address_country"
                                       options="{'no_create':True,'no_create_edit':True,'no_open':True}"/>
                            </div>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="responsible" widget="many2one_avatar_user"
                                   options="{'no_create': True, 'no_create_edit':True}"/>
                        </group>
                        <group>
                            <field name="priority" widget="priority"/>
                        </group>
                    </group>
                    <group>
                        <group string="Sale Order Details">
                            <label for="sale_order_id" string="Sale Order"/>
                            <div class="address_format">
                                <field name="sale_order_id" readonly="1" force_save="1" style="width: 50%"/>
                                <field name="state"
                                       decoration-success="state == 'sale' or state == 'done'"
                                       decoration-info="state == 'draft' or state == 'sent'"
                                       widget="badge" optional="show"/>
                            </div>
                        </group>
                        <group string="Manufacturing Order Details">
                            <label for="manufacturing_order_id" string="Manufacturing Order"/>
                            <div class="address_format">
                                <field name="manufacturing_order_id" readonly="1" force_save="1" style="width: 50%"/>
                                <field name="manufacturing_state"
                                       decoration-success="manufacturing_state in ('done', 'to_close')"
                                       decoration-warning="manufacturing_state == 'progress'"
                                       decoration-info="manufacturing_state in ('confirmed', 'draft')"
                                       optional="show" widget="badge"/>
                            </div>
                        </group>
                        <group string="Bill of Material Details">
                            <field name="bill_of_material_order_id" readonly="1" force_save="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="site_details" string="Site Details">
                            <group string="Site Information">
                                <group>
                                    <field name="site_usage" placeholder="(eg. School, Domestic, Ind/Office Unit)"/>
                                    <field name="type_of_property" widget="radio" options="{'horizontal': true}"/>
                                    <field name="age_of_property"/>
                                </group>
                                <group>
                                    <span class="o_form_label o_td_label" name="address_name">
                                        <strong>Address</strong>
                                    </span>
                                    <div class="o_address_format">
                                        <field name="site_street" placeholder="Street..." class="o_address_street"/>
                                        <field name="site_street2" placeholder="Street 2..." class="o_address_street"/>
                                        <field name="site_city" placeholder="City" class="o_address_city"/>
                                        <field name="site_state_id" class="o_address_state" placeholder="State"
                                               options="{'no_create':True,'no_create_edit':True,'no_open':True}"/>
                                        <field name="site_zip" placeholder="ZIP" class="o_address_zip"/>
                                        <field name="site_country_id" placeholder="Country" class="o_address_country"
                                               options="{'no_create':True,'no_create_edit':True,'no_open':True}"/>
                                    </div>
                                    <field name="site_latitude_location"/>
                                    <field name="site_longitude_location"/>
                                </group>
                            </group>
                        </page>
                        <page name="solar_requirements" string="Solar Requirements">
                            <group>
                                <group>
                                    <field name="service_type" widget="radio" options="{'vertical': true}"/>
                                </group>
                                <group>
                                    <field name="contract_demand"/>
                                </group>
                                <group>
                                    <field name="estimate_quotation"/>
                                    <field name="company_id" invisible="1"/>
                                    <field name="currency_id" invisible="1"/>
                                </group>
                            </group>
                            <group string="Description">
                                <field name="description" nolabel="1"/>
                            </group>
                        </page>
                        <page name="survey" string="Survey">
                            <group>
                                <group>
                                    <field name="date_of_inspection"/>
                                </group>
                                <group>
                                    <field name="survey_team_id"/>
                                    <field name="survey_member_id"/>
                                    <field name="survey_project_id" invisible="1"/>
                                    <field name="survey_task_id" invisible="1"/>
                                    <button string="Create Survey Task" name="create_survey_task"
                                            type="object" class="oe_highlight"
                                            attrs="{'invisible': ['|', ('survey_project_id','=',False),('survey_task_id','!=',False)]}"/>
                                </group>
                            </group>
                            <group string="Documents">
                                <field name="ren_survey_document_ids" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="title"/>
                                        <field name="file_name" invisible="1"/>
                                        <field name="avatar" filename="file_name" widget="binary"/>
                                    </tree>
                                </field>
                            </group>
                            <group string="Site Survey Images">
                                <field name="site_survey_image_ids" nolabel="1">
                                    <kanban string="Kanban" class="">
                                        <field name="id"/>
                                        <field name="avatar"/>
                                        <field name="title"/>
                                        <templates>
                                            <t t-name="kanban-box">
                                                <div class="row oe_kanban_global_click"
                                                     style="max-width:250px !important;">
                                                    <div class="col-12">
                                                        <img t-att-src="kanban_image('site.survey.image', 'avatar', record.id.raw_value)"
                                                             t-att-alt="name" style="margin: 10px 0" width="200px"
                                                             height="200px" class="img img-responsive"/>
                                                    </div>
                                                    <div>
                                                        <h5 style="color:#714B67;text-align:center;">
                                                            <strong>
                                                                <field name="title"/>
                                                            </strong>
                                                        </h5>
                                                    </div>
                                                </div>
                                            </t>
                                        </templates>
                                    </kanban>
                                </field>
                            </group>
                            <group string="Remarks">
                                <field name="site_remarks" nolabel="1"/>
                            </group>
                        </page>
                        <page name="quotation" string="Quotations">
                            <field name="ren_quotation_ids">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="description"/>
                                    <field name="price"/>
                                    <field name="company_id" invisible="1"/>
                                    <field name="currency_id" invisible="1"/>
                                </tree>
                            </field>
                            <button name="action_create_quotation" string="Create Quotation" type="object"
                                    class="oe_highlight" attrs="{'invisible': [('sale_order_id', '!=', False)]}"/>
                            <group class="oe_subtotal_footer oe_right" style="text-align: right">
                                <field name="company_id" invisible="1"/>
                                <field name="currency_id" invisible="1"/>
                                <field name="total_quotation" class="oe_subtotal_footer_separator"/>
                            </group>
                        </page>
                        <page name="material_of_project" string="Materials of Project">
                            <group string="Bill of materials">
                                <field name="ren_bom_ids" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="product_id"/>
                                        <field name="product_qty"/>
                                    </tree>
                                </field>
                            </group>
                            <button name="action_create_bill_of_material" string="Create Bill of Material" type="object"
                                    class="oe_highlight"
                                    attrs="{'invisible': [('bill_of_material_order_id', '!=', False)]}"/>
                            <button name="action_create_manufacturing_order" string="Create Manufacturing Order"
                                    type="object" class="oe_highlight"
                                    attrs="{'invisible': ['|', ('bill_of_material_order_id', '=', False), ('manufacturing_order_id', '!=', False)]}"/>
                        </page>
                        <page name="project_installation" string="Project Installation">
                            <group>
                                <group string="Date of Installation">
                                    <field name="start_date"/>
                                    <field name="end_date"/>
                                    <field name="days"/>
                                </group>
                                <group string="Project Installation Team">
                                    <field name="installation_team_id"/>
                                    <field name="installation_team_project_id" invisible="1"/>
                                    <field name="installation_task_id" invisible="1"/>
                                    <field name="installation_member_ids" widget="many2many_tags"
                                           options="{'color_field': 'color'}"/>
                                    <button string="Create Installation Task"
                                            name="create_installation_task"
                                            type="object" class="oe_highlight"
                                            attrs="{'invisible': ['|', ('installation_team_project_id','=',False),('installation_task_id','!=',False)]}"/>
                                </group>
                            </group>
                        </page>
                        <page name="qa_inspection_team" string="QA Inspection Team">
                            <group>
                                <group>
                                    <field name="qa_team_id"/>
                                    <field name="qa_member_id"/>
                                    <field name="qa_status" invisible="1"/>
                                    <field name="qa_team_project_id" invisible="1"/>
                                    <field name="qa_task_id" invisible="1"/>
                                    <button string="Create QA Task" name="create_QA_task"
                                            type="object" class="oe_highlight"
                                            attrs="{'invisible': ['|', ('qa_team_project_id','=',False),('qa_task_id','!=',False)]}"/>
                                </group>
                                <group>
                                    <div class="container">
                                        <div class="row d-flex justify-content-left"
                                             style="margin: 10px;text-align: center;">
                                            <div class="btn-toolbar" role="toolbar">
                                                <button name="action_qa_pass" string="Pass" type="object"
                                                        class="oe_highlight" width="150px"
                                                        attrs="{'invisible': [('qa_status', '=', 'pass')]}"/>
                                                &#160;&#160; &#160;&#160; &#160;&#160;.
                                                <button name="action_review" string="Need to Review" type="object"
                                                        class="oe_highlight" width="150px"
                                                        attrs="{'invisible': [('qa_status', '=', 'pass')]}"/>
                                            </div>
                                        </div>
                                    </div>
                                </group>
                            </group>
                            <group string="Remarks">
                                <field name="remarks" nolabel="1"/>
                            </group>
                        </page>
                        <page name="material_warranty" string="Material Warranty">
                            <group>
                                <group>
                                    <field name="warranty_template_id"/>
                                </group>
                            </group>
                            <group string="Warranty Covered">
                                <field name="warranty_covered" nolabel="1"/>
                            </group>
                            <group string="Warranty Not Covered">
                                <field name="warranty_not_covered" nolabel="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    <record id="renewable_energy_order_tree_view" model="ir.ui.view">
        <field name="name">renewable.energy.order.tree.view</field>
        <field name="model">renewable.energy.order</field>
        <field name="arch" type="xml">
            <tree>
                <field name="order_number"/>
                <field name="date_of_order"/>
                <field name="customer_id"/>
                <field name="phone"/>
                <field name="responsible"/>
            </tree>
        </field>
    </record>
    <record id="renewable_energy_order_kanban_view" model="ir.ui.view">
        <field name="name">renewable.energy.order.kanban.view</field>
        <field name="model">renewable.energy.order</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" archivable="false" js_class="sem_kanban" sample="1"
                    default_order='order_stages'
                    default_group_by="order_stages"
                    group_create="false"
                    quick_create="false">
                <field name="order_number"/>
                <field name="customer_id"/>
                <field name="date_of_order"/>
                <field name="priority"/>
                <field name="responsible"/>
                <field name="order_stages"/>
                <field name="sale_order_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_content oe_kanban_global_click">
                            <div>
                                <strong class="o_kanban_record_title">
                                    <strong>
                                        <field name="order_number"/>
                                    </strong>
                                </strong>
                            </div>
                            <div>
                                <span class="o_kanban_record_subtitle">
                                    <field name="customer_id"/>
                                    <br/>
                                    <field name="date_of_order"/>
                                    <br/>
                                    <field name="contract_demand"/>
                                    <br/>
                                    <field name="sale_order_id"/>
                                </span>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <field name="priority" widget="priority"/>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <field name="responsible" widget="many2one_avatar_user"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <record id="renewable_energy_order_search_view" model="ir.ui.view">
        <field name="name">renewable.energy.order.search.view</field>
        <field name="model">renewable.energy.order</field>
        <field name="arch" type="xml">
            <search>
                <field name="responsible"/>
                <group string="Group By">
                    <filter name="order_number" string="Order Number"
                            context="{'group_by':'order_number'}"/>
                    <filter name="order_stages" string="Order Stages"
                            context="{'group_by':'order_stages'}"/>
                </group>
            </search>
        </field>
    </record>
    <record id="renewable_energy_order_calendar_view" model="ir.ui.view">
        <field name="name">renewable.energy.order.calendar.view</field>
        <field name="model">renewable.energy.order</field>
        <field name="arch" type="xml">
            <calendar string="REN Order Calendar"
                      date_start="date_of_order"
                      event_open_popup="true"
                      mode="month"
                      color="order_number"
                      scales="day,month,year"
                      quick_add="False">
                <field name="customer_id" filters="1"/>
            </calendar>
        </field>
    </record>
    <record id="action_renewable_energy_order" model="ir.actions.act_window">
        <field name="name">REN Order</field>
        <field name="res_model">renewable.energy.order</field>
        <field name="view_mode">kanban,tree,form,calendar,search,activity</field>
    </record>
</odoo>
