<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="ren_lead_form_view" model="ir.ui.view">
        <field name="name">ren.lead.form.view</field>
        <field name="model">ren.lead</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="status" widget="statusbar" statusbar_visible="a_new,b_in_discussion,d_won"/>
                    <button string="In Discussion" name="a_new_to_b_in_discussion" type="object"
                            attrs="{'invisible': [('status', 'not in', ['a_new'])]}"/>
                    <button string="Won" name="b_in_discussion_to_c_won" type="object"
                            attrs="{'invisible': [('status', 'not in', ['b_in_discussion'])]}"/>
                    <button string="Lost" name="c_won_to_d_lost" type="object" class="oe_highlight"
                            attrs="{'invisible': [('status', 'in', ['a_new', 'c_won', 'd_lost'])]}"/>

                    <button string="Create Customer" name="get_create_customer" type="object" class="btn-primary"
                            attrs="{'invisible': ['|', ('status', 'not in', ['b_in_discussion']), ('partner_id', '!=', False)]}"/>
                    <button string="Create REN Order" name="get_create_ren_order" type="object" class="btn_primary"
                            attrs="{'invisible': ['|', ('status', 'not in', ['c_won']), ('renewable_energy_order_id', '!=', False)]}"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Lost" bg_color="bg-danger"
                            attrs="{'invisible': [('status', 'not in', ['c_lost'])]}"/>
                    <widget name="web_ribbon" title="Won" bg_color="bg-success"
                            attrs="{'invisible': [('status', 'not in', ['d_won'])]}"/>

                    <div class="oe_title">
                        <label for="title"/>
                        <h1>
                            <field name="title" placeholder="e.g. Title...."/>
                        </h1>
                    </div>
                    <group>
                        <group string="Customer Details">
                            <field name="customer_category"/>
                            <field name="name"/>
                            <field name="email"/>
                            <field name="phone"/>
                            <field name="partner_id" readonly="1" force_save="1"/>
                            <field name="renewable_energy_order_id" readonly="1" force_save="1"/>
                        </group>
                        <group string="Residence Details">
                            <span class="o_form_label o_td_label" name="address_name">
                                <strong>Address</strong>
                            </span>
                            <div class="o_address_format">
                                <field name="customer_street" placeholder="Street..." class="o_address_street"/>
                                <field name="customer_street2" placeholder="Street 2..." class="o_address_street"/>
                                <field name="customer_city" placeholder="City" class="o_address_city"/>
                                <field name="customer_state_id" class="o_address_state" placeholder="State"
                                       options="{'no_create':True,'no_create_edit':True,'no_open':True}"/>
                                <field name="customer_zip" placeholder="ZIP" class="o_address_zip"/>
                                <field name="customer_country_id" placeholder="Country" class="o_address_country"
                                       options="{'no_create':True,'no_create_edit':True,'no_open':True}"/>
                            </div>
                        </group>
                    </group>
                    <group>
                        <group string="Lead Source Medium">
                            <field name="lead_source_type"/>
                            <field name="source_type_description"/>
                        </group>
                        <group string="Electricity Details">
                            <field name="existing_connection"/>
                            <field name="existing_supply_volt"/>
                            <field name="consumer_no"/>
                            <field name="monthly_electric_bill"/>
                        </group>
                    </group>
                    <group>
                        <group string="Responsible">
                            <field name="responsible" widget="many2one_avatar_user"
                                   options="{'no_create': True, 'no_create_edit':True}"/>
                        </group>
                        <group string="Priority">
                            <field name="priority" widget="priority"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="site_details" string="Site Details">
                            <group string="Site Information">
                                <group>
                                    <field name="site_usage" placeholder="(eg. School, Domestic, Ind/Office Unit)"/>
                                    <field name="type_of_property" widget="radio" options="{'horizontal': true}"/>
                                    <field name="age_of_property"/>
                                </group>
                                <group>
                                    <span class="o_form_label o_td_label" name="address_name">
                                        <strong>Address</strong>
                                    </span>
                                    <div class="o_address_format">
                                        <field name="site_street" placeholder="Street..." class="o_address_street"/>
                                        <field name="site_street2" placeholder="Street 2..." class="o_address_street"/>
                                        <field name="site_city" placeholder="City" class="o_address_city"/>
                                        <field name="site_state_id" class="o_address_state" placeholder="State"
                                               options="{'no_create':True,'no_create_edit':True,'no_open':True}"/>
                                        <field name="site_zip" placeholder="ZIP" class="o_address_zip"/>
                                        <field name="site_country_id" placeholder="Country" class="o_address_country"
                                               options="{'no_create':True,'no_create_edit':True,'no_open':True}"/>
                                    </div>
                                    <field name="site_latitude_location"/>
                                    <field name="site_longitude_location"/>
                                </group>
                            </group>
                        </page>
                        <page name="solar_requirements" string="Solar Requirements">
                            <group>
                                <group>
                                    <field name="service_type"/>
                                    <field name="contract_demand"/>
                                </group>
                                <group>
                                    <field name="estimate_quotation"/>
                                    <field name="company_id" invisible="1"/>
                                    <field name="currency_id" invisible="1"/>
                                </group>
                            </group>
                        </page>
                        <page name="lost_reason" string="Lost Reasons"
                              attrs="{'invisible': [('status', 'not in', ['d_lost'])]}">
                            <group string="Feedback">
                                <field name="feedback" nolabel="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    <record id="ren_lead_tree_view" model="ir.ui.view">
        <field name="name">ren.lead.tree.view</field>
        <field name="model">ren.lead</field>
        <field name="arch" type="xml">
            <tree>
                <field name="title"/>
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="customer_city"/>
                <field name="customer_zip"/>
                <field name="customer_state_id"/>
                <field name="customer_country_id"/>
            </tree>
        </field>
    </record>
    <record id="ren_lead_kanban_view" model="ir.ui.view">
        <field name="name">ren.lead.kanban.view</field>
        <field name="model">ren.lead</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" archivable="false" js_class="sem_kanban" sample="1"
                    default_order='status'
                    default_group_by="status"
                    group_create="false"
                    quick_create="false">
                <field name="title"/>
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="priority"/>
                <field name="responsible"/>
                <field name="status"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_content oe_kanban_global_click">
                            <div>
                                <strong class="o_kanban_record_title">
                                    <strong>
                                        <field name="title"/>
                                    </strong>
                                </strong>
                            </div>
                            <div>
                                <span class="o_kanban_record_subtitle">
                                    <field name="name"/>
                                    <br/>
                                    <field name="phone"/>
                                    <br/>
                                    <field name="email"/>
                                </span>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <field name="priority" widget="priority"/>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <field name="responsible" widget="many2one_avatar_user"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <record id="ren_lead_search_view" model="ir.ui.view">
        <field name="name">ren.lead.search.view</field>
        <field name="model">ren.lead</field>
        <field name="arch" type="xml">
            <search>
                <field name="title"/>
                <group string="Group By">
                    <filter name="status" string="Status"
                            context="{'group_by': 'status'}"/>
                    <filter name="customer_category" string="Customer Category"
                            context="{'group_by': 'customer_category'}"/>
                    <filter name="lead_source_type" string="Lead Source Type"
                            context="{'group_by': 'lead_source_type'}"/>
                </group>
            </search>
        </field>
    </record>
    <record id="action_ren_lead" model="ir.actions.act_window">
        <field name="name">Leads</field>
        <field name="res_model">ren.lead</field>
        <field name="view_mode">kanban,tree,form,search,activity</field>
    </record>
</odoo>
