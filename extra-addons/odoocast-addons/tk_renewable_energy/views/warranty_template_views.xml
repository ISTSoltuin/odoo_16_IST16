<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="warranty_template_form_view" model="ir.ui.view">
        <field name="name">warranty.template.form.view</field>
        <field name="model">warranty.template</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="title"/>
                        <h1>
                            <field name="title" placeholder="e.g.Template Title"/>
                        </h1>
                    </div>
                    <notebook>
                        <page name="warranty_not_covered" string="Warranty Covered">
                            <field name="warranty_covered" nolabel="1"/>
                        </page>
                        <page name="warranty_not_covered" string="Warranty Not Covered">
                            <field name="warranty_not_covered" nolabel="1"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    <record id="warranty_template_tree_view" model="ir.ui.view">
        <field name="name">warranty.template.tree.view</field>
        <field name="model">warranty.template</field>
        <field name="arch" type="xml">
            <tree>
                <field name="title"/>
            </tree>
        </field>
    </record>
    <record id="warranty_template_search_view" model="ir.ui.view">
        <field name="name">warranty.template.search.view</field>
        <field name="model">warranty.template</field>
        <field name="arch" type="xml">
            <search>
                <field name="title"/>
            </search>
        </field>
    </record>
    <record id="action_warranty_template" model="ir.actions.act_window">
        <field name="name">Warranty Template</field>
        <field name="res_model">warranty.template</field>
        <field name="view_mode">tree,form,activity,search</field>
    </record>
</odoo>
