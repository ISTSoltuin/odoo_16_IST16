<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="survey_team_form_view" model="ir.ui.view">
        <field name="name">survey.team.form.view</field>
        <field name="model">survey.team</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button string="Create Survey project" name="create_survey_project" type="object"
                            class="oe_highlight" attrs="{'invisible': [('survey_project_id', '!=', False)]}"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="title"/>
                        <h1>
                            <field name="title" placeholder="e.g. Survey Team...."/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="survey_project_id"/>
                        </group>
                        <group>
                            <field name="survey_manager_id" widget="many2one_avatar_user"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="team_members" string="Team Members">
                            <field name="employee_ids"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    <record id="survey_team_tree_view" model="ir.ui.view">
        <field name="name">survey.team.tree.view</field>
        <field name="model">survey.team</field>
        <field name="arch" type="xml">
            <tree>
                <field name="title"/>
                <field name="survey_manager_id" widget="many2one_avatar_user"/>
            </tree>
        </field>
    </record>
    <record id="survey_team_kanban_view" model="ir.ui.view">
        <field name="name">survey.team.kanban.view</field>
        <field name="model">survey.team</field>
        <field name="arch" type="xml">
            <kanban class="">
                <field name="title"/>
                <field name="survey_manager_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_content oe_kanban_global_click">
                            <div>
                                <strong class="o_kanban_record_title">
                                    <strong>
                                        <field name="title"/>
                                    </strong>
                                </strong>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_right">
                                    <field name="survey_manager_id" widget="many2one_avatar_user"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <record id="survey_team_search_view" model="ir.ui.view">
        <field name="name">survey.team.search.view</field>
        <field name="model">survey.team</field>
        <field name="arch" type="xml">
            <search>
                <field name="title"/>
                <field name="survey_manager_id"/>
                <group string="Group By">
                    <filter name="survey_manager_id" string="Survey Manager"
                            context="{'group_by':'survey_manager_id'}"/>
                    <filter name="employee_ids" string="Employee Name"
                            context="{'group_by':'employee_ids'}"/>
                </group>
            </search>
        </field>
    </record>
    <record id="action_survey_team" model="ir.actions.act_window">
        <field name="name">Survey Team</field>
        <field name="res_model">survey.team</field>
        <field name="view_mode">kanban,tree,form,search,activity</field>
    </record>
</odoo>
