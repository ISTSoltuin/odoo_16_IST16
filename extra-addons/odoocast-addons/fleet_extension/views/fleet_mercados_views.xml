<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_fleet_mercados_form" model="ir.ui.view">
        <field name="name">fleet.mercados.form</field>
        <field name="model">fleet.mercados</field>
        <field name="arch" type="xml">
            <form string="Mercados de Veículos">
                <sheet>
                    <group>
                        <field name="tipo"/>
                        <field name="porte"/>
                        <field name="molicar"/>
                        <field name="fipe"/>
                        <field name="marca"/>
                        <field name="familia"/>
                        <field name="modelo"/>
                        <field name="combustivel"/>
                        <field name="cavalos"/>
                        <field name="postas"/>
                        <field name="inicio"/>
                        <field name="fim"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_fleet_mercados_tree" model="ir.ui.view">
        <field name="name">fleet.mercados.tree</field>
        <field name="model">fleet.mercados</field>
        <field name="arch" type="xml">
            <tree string="Mercados de Veículos">
                <field name="tipo"/>
                <field name="porte"/>
                <field name="molicar"/>
                <field name="fipe"/>
                <field name="marca"/>
                <field name="familia"/>
                <field name="modelo"/>
                <field name="combustivel"/>
                <field name="cavalos"/>
                <field name="postas"/>
                <field name="inicio"/>
                <field name="fim"/>
            </tree>
        </field>
    </record>

    <record id="action_fleet_mercados" model="ir.actions.act_window">
        <field name="name">Mercados de Veículos</field>
        <field name="res_model">fleet.mercados</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p>
                Gerencie os mercados de veículos cadastrados.
            </p>
        </field>
    </record>

    <menuitem id="menu_fleet_mercados" name="Mercados de Veículos" 
              parent="fleet.fleet_vehicles_configuration" action="action_fleet_mercados"/>
</odoo>
