<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- View project.project tree -->
    <record id="view_project_project_tree_inherit" model="ir.ui.view">
        <field name="name">view.project.project.tree  (in custom_crm_project)</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.view_project"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="task_ids" widget="many2many_tags"/>
            </xpath>
        </field>
    </record>


    <!-- View project.project form -->
    <record id="view_project_project_form_inherit" model="ir.ui.view">
        <field name="name">view.project.project.form (in custom_crm_project)</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='description']" position="before">
                <page name="task_ids" string="Tasks Management">
                    <label for="crm_lead_id" colspan="4"/>
                    <field name="crm_lead_id" nolabel="1" colspan="4" readonly="1"/>
                    <br/>
                    <label for="task_ids" colspan="4"/>
                    <field name="task_ids" nolabel="1" colspan="4" readonly="1"/>
                </page>
            </xpath>
        </field>
    </record>

</odoo>