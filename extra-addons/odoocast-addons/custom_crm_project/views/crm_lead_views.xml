<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- View crm.lead tree -->
    <record id="view_crm_lead_tree" model="ir.ui.view">
        <field name="name">view.crm.lead.tree (in custom_crm_project)</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_tree_view_oppor"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="project_id"/>
            </xpath>
        </field>
    </record>


    <!-- View crm.lead form -->
    <record id="view_crm_lead_form_inherit" model="ir.ui.view">
        <field name="name">view.crm.lead.form (in custom_crm_project)</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[last()]" position="after">
                <page name="project_info" string="Project Info">
                    <group string="Project Data" colspan="4">
                        <label for="project_id" colspan="4"/>
                        <field name="project_id" nolabel="1" colspan="4" readonly="1"/>
                    </group>
                </page>
            </xpath>
            <xpath expr="//h2[last()]" position="inside">
                <div class="d-flex align-items-baseline">
                    <button string="Gerar Partner" name="generate_crm_partner" 
                    type="object" class="oe_highlight oe_inline o_input_6ch"
                    attrs="{'invisible':[('partner_id','!=',False)]}"/>
                </div>
                <br/>
            </xpath>
        </field>
    </record>

</odoo>