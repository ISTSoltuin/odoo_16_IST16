<odoo>
    <data>

        <!-- Kanban View for CrmFunnelGroup -->
        <record id="view_crm_funnel_group_kanban" model="ir.ui.view">
            <field name="name">crm.funil.grupo.kanban</field>
            <field name="model">crm.funil.grupo</field>
            <field name="arch" type="xml">
                <kanban>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_content">
                                <div class="oe_kanban_global_click">
                                    <field name="name"/>
                                    <!-- Add other fields you want to display on Kanban box -->
                                </div>
                                <div class="oe_kanban_details">
                                    <!-- Add details you want to display on Kanban box -->
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Tree View for CrmFunnelGroup -->
        <record id="view_crm_funnel_group_tree" model="ir.ui.view">
            <field name="name">crm.funil.grupo.tree</field>
            <field name="model">crm.funil.grupo</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="funis_ids"/>
                    <!-- Add other fields you want to display in the tree view -->
                </tree>
            </field>
        </record>

        <!-- Form View for CrmFunnelGroup -->
        <record id="view_crm_funnel_group_form" model="ir.ui.view">
            <field name="name">crm.funil.grupo.form</field>
            <field name="model">crm.funil.grupo</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="name"/>
                        <field name="funis_ids" widget="many2many_tags" options="{'no_create_edit': True}" placeholder="Adicionar Funis"/>
                        <!-- Add other fields -->
                    </group>
                </form>
            </field>
        </record>

    </data>
</odoo>
