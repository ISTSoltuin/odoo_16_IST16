<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_create_sales_pipeline_wizard" model="ir.ui.view">
        <field name="name">create.sales.pipeline.wizard.form</field>
        <field name="model">create.sales.pipeline.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="is_group"/>
                    <field name="funnel_ids" widget="many2many_tags" options="{'no_create_edit': True}" domain="[('is_group', '=', False)]"/>
                </group>
                <footer>
                    <button string="Criar Funil" type="object" class="oe_highlight" name="create_sales_pipeline"/>
                    <button string="Fechar" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
