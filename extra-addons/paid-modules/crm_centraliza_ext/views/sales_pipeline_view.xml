<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sales_pipeline_form" model="ir.ui.view">
        <field name="name">sales.pipeline.form</field>
        <field name="model">sales.pipeline</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="is_group"/>
                    <field name="funnel_ids" widget="many2many_tags" options="{'no_create_edit': True}" domain="[('is_group', '=', False)]"/>
                </group>
                <!-- Adicione outros campos conforme necessário -->
            </form>
        </field>
    </record>

    <record id="view_sales_pipeline_tree" model="ir.ui.view">
        <field name="name">sales.pipeline.tree</field>
        <field name="model">sales.pipeline</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="is_group"/>
                <field name="funnel_ids" widget="many2many_tags"/>
                <!-- Adicione outros campos conforme necessário -->
            </tree>
        </field>
    </record>

    <record id="action_sales_pipeline" model="ir.actions.act_window">
        <field name="name">Sales Pipeline</field>
        <field name="res_model">sales.pipeline</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_sales_pipeline" name="Criar Pipeline" parent="crm.crm_menu_sales" action="action_sales_pipeline"/>
</odoo>
