<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <!-- Adiciona botão de importação ao cabeçalho -->
        <record id="view_crm_case_kanban_view_leads" model="ir.ui.view">
            <field name="name">crm.crm_case_kanban_view_leads</field>
            <field name="model">crm.lead</field>
            <field name="arch" type="xml">
                <kanban class="oe_kanban_global_click">
                    <!-- Adiciona botão ao cabeçalho -->
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_content">
                                <div class="oe_kanban_global_click">
                                    <field name="name"/>
                                    <!-- Adiciona outros campos que deseja exibir no cartão do Kanban -->
                                </div>
                                <div class="oe_kanban_details">
                                    <!-- Adiciona botão ao cabeçalho -->
                                    <button string="Importar" type="object" class="oe_highlight" name="open_custom_import_view"/>
                                    <!-- Adiciona detalhes que deseja exibir no cartão do Kanban -->
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <record id="action_custom_import_view" model="ir.actions.act_window">
            <field name="name">Importar Registros (Custom)</field>
            <field name="res_model">base_import.import</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="base_import.import_form"/>
        </record>


    </data>
</odoo>

