<odoo>
    <record id="crm_crm_lead_lost_view_form_inherited" model="ir.ui.view">
        <field name="name">crm.lead.lost.form.view</field>
        <field name="model">crm.lead.lost</field>
        <field name="inherit_id" ref="crm.crm_lead_lost_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='lost_reason_id']" position="after">
                <field name="note"/>
            </xpath>
            <xpath expr="//field[@name='lost_feedback']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>
</odoo>
